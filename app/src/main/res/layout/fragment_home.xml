<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/netWorth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="31dp"
        android:text="Net Worth:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/cash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Cash:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/investments_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/netWorth" />

    <TextView
        android:id="@+id/investments_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:text="Investments:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/creditCards"
        app:layout_constraintEnd_toStartOf="@+id/invest_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash" />

    <TextView
        android:id="@+id/creditCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="379dp"
        android:text="Credit Cards:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/investments_home" />

    <TextView
        android:id="@+id/invest_num"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="94dp"
        android:text="$10000"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/investments_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/investments_home" />

</androidx.constraintlayout.widget.ConstraintLayout>